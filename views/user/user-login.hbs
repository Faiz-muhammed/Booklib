<section class="vh-100" style="background-color: #cccbcbd0;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-3">Sign in</h3>
             <form action="/userlogin" id="loginuser" method="POST">
             {{#if blocked}}
             <p class="text-danger">Your Account is blocked</p>
             {{/if}}
             {{#if loginErr}}
             <p class="text-danger">Invalid username or password</p>
             {{/if}}
            <div class="form-outline mb-2">
              <input type="email" name="Email" id="typeEmailX-2" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Email</label>
            </div>

            <div class="form-outline mb-2">
              <input type="password" name="Password" id="typePasswordX-2" class="form-control form-control-lg" />
              <label class="form-label" for="typePasswordX-2">Password</label>
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-start mb-2">
    
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

            <hr class="my-4">
              <a class="btn btn-primary" href="/phonenumberpage" role="button">Request Otp</a>
            {{!-- <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="fab fa-facebook-f me-2"></i>Request otp</button> --}}
                  
                   <p class="text-center text-muted mt-3 mb-0">Don't Have an
                  account yet?
                  <a href="/signup" class="fw-bold text-body"><u>Signup here</u></a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 <script src="/user/javascripts/jquery-3.2.1.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

<script>
  $("#loginuser").validate({
  
    rules:{
       
        Email:{
            required:true,
            email:true
        },
       
        
        Password:{
            required:true,
            minlength:4
        }
      
    },
    messages:{
      
        Email:{
            required: 'Email address is required',
            
        },
       
        Password:{
            required: 'Password is required'
        }
        

    }
});
</script>
