      <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    function cancelOrder(proId,orderId){
        
        swal({
        title: "Are you sure?",
        text: "Once confirmed ,the product will be removed from your Order!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
             $.ajax({
                   url:'/cancelOrder',
                   data:{
                   orderId:orderId,
                   proId:proId
                   },
                    method:'post',
                    success:(response)=>{
                     swal("Order cancelled!", {
                         icon: "success",
                       });
         
                    location.reload()
                  }
                })

       }

})
    }

    
</script>