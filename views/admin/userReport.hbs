 <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.1.0/css/buttons.dataTables.min.css">
   
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container bootstrap snippets bootdeys">
<div class="row">
  <div class="col-xs-12 col-sm-9">
    <form action="/admin/productOffer" id="proOffer" method="post" class="form-horizontal">
       
      <div class="panel panel-default">
        <div class="panel-heading">
        <h2 class="panel-title text-dark">Product Offer</h2><br>
        </div>
        {{#if proOfferExist}}
         <h5 class="text-danger">Offer already exist for this product!</h5>
         {{/if}}
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label text-dark">Product</label>
            <div class="col-sm-10">
              <select name="offerProduct" class="form-control">
                <option selected="">select product</option>
                {{#each products}}
                <option>{{this.product_name}}</option>
                {{/each}}
              </select>
            </div>  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label text-dark">Discount</label>
            <div class="col-sm-10">
              <input name="Discount" type="text" oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\..*)\./g, '$1');" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label text-dark">Start date</label>
            <div class="col-sm-10">
              <input name="startDate" onchange="dateValid()" id="txtDate" type="date" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label text-dark">End date</label>
            <div class="col-sm-10">
              <input name="endDate" disabled id="endDate" type="date" class="form-control">
            </div>
          </div>
           <button class="btn btn-primary ml-2" type="submit">SUBMIT</button>
        </div>
      </div>

    </form>
  </div>
</div>
</div><br><br> 

    <div class="card">
  <div class="card-body">
    <h4 class="card-title">USER ACTIVITY REPORT</h4>
   
   <table id="dailySales" class="table table-striped display nowrap" style="width:100%">  
        <thead>
            <tr class="text-center">
                <th>Sl.no</th>
                <th>Date</th>
                <th>Product count</th>
                <th>Revenue</th>
                {{!-- <th>Start date</th>
                <th>Salary</th> --}}
            </tr>
        </thead>
        <tbody>
            {{#each sale}}
            <tr class="text-center">
                <td>{{@index}}</td>
                <td>{{this._id}}</td>
                <td>{{this.prodCount}}</td>
                <td>{{this.Revenue}}</td>
                {{!-- <td>2011/04/25</td>
                <td>$320,800</td> --}}
            </tr>
            {{/each}}
           
        </tbody>
   </table>
   
  </div>
</div>
   
   

