        <script>
          $(document).ready(function(){
          $('#dailySales').DataTable({
        dom:'Bfrtip',
        buttons:[
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
});

$('#dailySales tbody tr').each(function (idx){
        $(this).children("td:eq(0)").html(idx+1)
      })

