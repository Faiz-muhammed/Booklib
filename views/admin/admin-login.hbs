
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo d-flex justify-content-center">
                  <img src="/admin/images/logo.png" />
                </div>
                <h4></h4>
                <h6 class="font-weight-light d-flex justify-content-center">Sign in to continue.</h6>
                <form class="pt-3" action="/admin/adminlogin" id="loginadmin" method="post">
                {{#if adminlogerr}}
                <h5 class="text-danger d-flex justify-content-center">Invalid password or username</h5>
                {{/if}}
                  <div class="form-group">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      name="Email"
                      id="exampleInputEmail1"
                      placeholder="Username"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control form-control-lg"
                      name="Password"
                      id="exampleInputPassword1"
                      placeholder="Password"
                    />
                  </div>
                  <div class="mt-3">
                   
                  <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button><br>
                
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <script src="/user/javascripts/jquery-3.2.1.min.js"></script>
              <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
<script>
  $("#loginadmin").validate({
    rules:{
       
        Email:{
            required:true,
            email:true
            
        },
       
        
        Password:{
            required:true,
            minlength:4
        }
      
    },
    messages:{
      
        Email:{
            required: 'Email address is required',
        },
       
        Password:{
            required: 'Password is required'
        }
        

    }
});
</script>

